<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="@dimen/item_book_width"
        android:layout_height="@dimen/item_book_height"
        android:orientation="vertical"
        tools:background="#EE0000">

        <ImageView
            android:id="@+id/bookCover"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_book_image_height"
            tools:src="@drawable/book_cover_example"
            />

        <TextView
            android:id="@+id/bookTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Metamorphosis"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Franz Kafka"/>
    </LinearLayout>
</layout>